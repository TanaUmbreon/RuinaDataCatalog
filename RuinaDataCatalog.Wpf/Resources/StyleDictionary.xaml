<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- ContentPage (NavigationView のコンテンツ領域に表示させる View) の最も外側にある Grid に適用するスタイル -->
    <Style x:Key="ContentPageGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="10,10,10,10" />
    </Style>

    <!-- グループボックスとして Border に適用するスタイル -->
    <Style x:Key="GroupBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="BorderThickness" Value="1,1,1,1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="BorderBrush" Value="#33808080" />
        <Setter Property="Background" Value="#19FFFFFF" />
    </Style>
</ResourceDictionary>
