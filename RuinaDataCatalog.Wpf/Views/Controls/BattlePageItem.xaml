<UserControl x:Class="RuinaDataCatalog.Wpf.Views.Controls.BattlePageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuinaDataCatalog.Core.Models;assembly=RuinaDataCatalog.Core"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <UserControl.DataContext>
        <local:CardInfo />
    </UserControl.DataContext>
    <Grid>
        <StackPanel Margin="8,0,0,8">
            <TextBlock Text="{Binding Id}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding Name}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding Artwork}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding Rarity}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding Cost}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding Range}" Margin="0,0,0,8" />
        </StackPanel>
    </Grid>
</UserControl>
